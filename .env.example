# Coinbase OnchainKit API Key
# Get your API key from: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_coinbase_api_key_here

# Base Network RPC URLs
# Mainnet
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
# Testnet (Sepolia)
NEXT_PUBLIC_BASE_TESTNET_RPC_URL=https://sepolia.base.org

# Application Configuration
NEXT_PUBLIC_APP_NAME=VeriDraw
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_ENV=development

# Contract Addresses (update with deployed addresses)
# Base Mainnet
NEXT_PUBLIC_DRAW_CONTRACT_BASE=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_TOKEN_CONTRACT_BASE=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_VOTING_CONTRACT_BASE=0x0000000000000000000000000000000000000000

# Base Testnet
NEXT_PUBLIC_DRAW_CONTRACT_BASE_TESTNET=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_TOKEN_CONTRACT_BASE_TESTNET=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_VOTING_CONTRACT_BASE_TESTNET=0x0000000000000000000000000000000000000000

# Database Configuration (if using external database)
DATABASE_URL=postgresql://username:password@localhost:5432/veridraw

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Webhook Secret (for verifying blockchain events)
WEBHOOK_SECRET=your_webhook_secret_here

# KYC Provider API Keys (optional)
VERIFF_API_KEY=your_veriff_api_key
SUMSUB_API_KEY=your_sumsub_api_key

# Analytics and Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/veridraw
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/veridraw
NEXT_PUBLIC_DOCS_URL=https://docs.veridraw.com

# Feature Flags
NEXT_PUBLIC_ENABLE_KYC=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_DATA=true

